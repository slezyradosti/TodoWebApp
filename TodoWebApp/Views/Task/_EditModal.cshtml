<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Task</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label id="taskIdEdit" hidden=""></label>
          </div>
          <div class="form-group">
            <label for="details">Task: </label>
            <input type="text" class="form-control" id="taskDetailsEditInput" placeholder="Task"/>
            <div class="error" id="editDetailsError">
                    This field is required
                </div>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="btnTaskUpdate">Save changes</button>
      </div>
    </div>
  </div>
</div>