@using Application.DTOs
@model List<Application.DTOs.TaskDto>

@{
    Layout = "../Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
    <body>
    <div class="container-md">
        
        <div class="container-sm" style="width: 80%">
        @await Html.PartialAsync("_CreateTask.cshtml", new TaskDto())
        </div>
        
        <ol class="list-group list-group-numbered">
            @foreach (var task in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" value="" id="flexSwitchCheckDefault">
                                @task.Details
                                @task.IsDone
                        </div>
                    </div>
                    <span class="badge bg-primary rounded-pill">
                        Edit
                    </span>
                    <span class="badge bg-primary rounded-pill">
                        Delete
                    </span>
                </li>
            }
        </ol>
        
       
    </div>
    </body>
</html>